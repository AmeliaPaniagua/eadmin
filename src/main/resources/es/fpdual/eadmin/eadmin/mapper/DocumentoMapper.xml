<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="es.fpdual.eadmin.eadmin.mapper.DocumentoMapper">

	<insert id="insertarDocumento">
		INSERT INTO Elemento (
		codigo, 
		nombre, 
		fechaCreacion, 
		fechaUltimaActualizacion, 
		esPublico, 
		tipo, 
		estadoDocumento) 
			VALUES (
			#{documento.codigo}, 
			#{documento.nombre},
			#{documento.fechaCreacion}, 
			#{documento.fechaUltimaActualizacion}, 
			#{documento.publico}, 
			1, 
			#{documento.estado.codigo})
	</insert>
	
	<update id="modificarDocumento">
<!-- 		UPDATE Elemento		 -->
<!-- 		SET	nombre = #{documento.nombre}, -->
<!-- 			fechaCreacion = #{documento.fechaCreacion},  -->
<!-- 			fechaActualizacion = #{documento.fechaUltimaActualizacion},  -->
<!-- 			esPublico = #{documento.publico},  -->
<!-- 			estadoDocumento = #{documento.estado.codigo} -->
<!-- 		WHERE codigo = #{documento.codigo} -->
		
		UPDATE Elemento SET tipo =1 WHERE codigo = 1
	
	</update>

	<delete id="eliminarDocumento">
		DELETE FROM Elemento 
			WHERE codigo = #{codigo}	
	
	</delete>
	
<!-- 	@ResultMap -->
	<select id="seleccionarDocumento">
		SELECT * FROM Elemento WHERE codigo = #{codigo}
	
	</select>


</mapper>
